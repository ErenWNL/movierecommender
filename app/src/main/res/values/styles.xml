<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Movie title style -->
    <style name="MovieTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Movie info style -->
    <style name="MovieInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Movie year and runtime style -->
    <style name="MovieMetadata" parent="MovieInfo">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/chip_background</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- Section title style -->
    <style name="SectionTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Section subtitle style -->
    <style name="SectionSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- Rating text style -->
    <style name="RatingText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/rating_background</item>
    </style>

    <!-- Genre chip style -->
    <style name="GenreChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">12sp</item>
        <item name="chipMinHeight">28dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <!-- Description text style -->
    <style name="DescriptionText" parent="MovieInfo">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:alpha">0.87</item>
    </style>

    <!-- Cast name style -->
    <style name="CastName">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Character name style -->
    <style name="CharacterName">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Movie card style -->
    <style name="MovieCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <!-- Detail info card style -->
    <style name="DetailCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Text appearance for expanded toolbar title -->
    <style name="ExpandedAppBar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/scrim</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <!-- Text appearance for collapsed toolbar title -->
    <style name="CollapsedAppBar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>